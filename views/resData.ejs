<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <title>Data</title>
    <link rel="stylesheet" href="/stylesheets/data.css">
</head>
<body>
<div class="main">
    <div class="tab">
        <button id="defaultOpen" class="tablinks" onclick="openCity(event, 'London')">Articles</button>
        <button class="tablinks" onclick="openCity(event, 'Paris')">Group Menus</button>
    </div>

    <!-- Tab content -->
    <div id="London" class="tabcontent">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Price(BAM)</th>
                <th scope="col">On Sale</th>
                <th scope="col">Sale Start</th>
                <th scope="col">Sale End</th>
                <th scope="col">Price On Sale</th>
                <th scope="col">Number of orders</th>
                <th scope="col">Image</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <%for(let i = 0; i<art.length; i++) {%>
                <%let delID = "d"+ art[i].id;%>
                <tr id="<%=delID%>">
                    <td><%=art[i].id%></td>
                    <td><%=art[i].naziv%></td>
                    <td><%=art[i].cijena%></td>
                    <td><%=art[i].akcija%></td>
                    <td><%=art[i].pocetak_akcije%></td>
                    <td><%=art[i].kraj_akcije%></td>
                    <td><%=art[i].cijena_akcija%></td>
                    <td><%=art[i].broj_narudzbi%></td>
                    <td><%=art[i].img_name%></td>
                    <td><button style='color: red' onclick="deleteArt(<%=art[i].id%>)">
                            <i class='fas fa-trash-alt'></i>
                        </button></td>
                </tr>
            <%}%>
            </tbody>
        </table>
    </div>

    <div id="Paris" class="tabcontent">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Articles</th>
                <th scope="col">Price(BAM)</th>
                <th scope="col">Start</th>
                <th scope="col">End</th>
                <th scope="col">Image</th>
            </tr>
            </thead>
            <tbody>
            <%for(let i = 0; i<gr.length; i++) {%>
            <tr>
                <td><%=gr[i].id%></td>
                <td><%=gr[i].naziv%></td>
                <td><%=gr[i].artikli%></td>
                <td><%=gr[i].cijena%></td>
                <td><%=gr[i].traje_od%></td>
                <td><%=gr[i].traje_do%></td>
                <td><%=gr[i].img_name%></td>
            </tr>
            <%}%>
            </tbody>
        </table>
    </div>
</div>
<script src="/javascripts/data.js"></script>
</body>
</html>
