</head>
<body>
<div id="bar" class="item1">
	<!-- Use any element to open the sidenav -->
	<div id="menu">
		<a id="myBtn" href="#">
			<i class="fas fa-user-plus"></i>
			<div id="myModal" class="modal">
				<div class="modal-content">
					<div class="modal-header">
						<span class="close">&times;</span>
						<h2>Add users</h2>
					</div>
					<div class="modal-body">
						<div class="tab">
							<button class="tablinks" onclick="openCity(event, 'London')" id="defaultOpen">Add restaurant admin</button>
							<button class="tablinks" onclick="openCity(event, 'Paris')">Add delivery person</button>
						</div>
						<div id="London" class="tabcontent">
						<form class="row g-3" method="post" action="/register/restaurant">
							<div class="col-md-6">
								<label for="inputName4" class="form-label">Restaurant Name</label>
								<input type="text" class="form-control" id="inputName4" name="name">
							</div>
							<div class="col-md-6">
								<label for="inputSName4" class="form-label">Admin Name</label>
								<input type="text" class="form-control" id="inputSName4" name="surname">
							</div>
							<div class="col-md-6">
								<label for="inputEmail4" class="form-label">Email</label>
								<input type="email" class="form-control" id="inputEmail4" name="email">
							</div>
							<div class="col-md-6">
								<label for="inputPassword4" class="form-label">Password</label>
								<input type="password" class="form-control" id="inputPassword4" name="pswrd">
							</div>
							<div class="col-8">
								<label for="inputAddress" class="form-label">Address</label>
								<input type="text" class="form-control" id="inputAddress" placeholder="1234 Main St" name="adrs">
							</div>
							<div class="col-4">
								<label for="inputAddress2" class="form-label">Star rating <small class="text-muted">(optional)</small></label>
								<input type="number" class="form-control" id="inputAddress2" placeholder="*****" name="flr">
							</div>
							<div class="col-md-6">
								<label class="form-label">City</label>
								<select class="form-select" name="cityy">
									<option selected>Choose...</option>
									<option value="Sarajevo">Sarajevo</option>
									<option value="Beograd">Beograd</option>
									<option value="Split">Split</option>
									<option value="Budva">Budva</option>
								</select>
							</div>
							<div class="col-md-6">
								<label class="form-label">Restaurant Category</label>
								<select class="form-select" name="categ">
									<option selected>Choose...</option>
									<option value="All">All</option>
									<option value="Fast Food">Fast Food</option>
								</select>
							</div>
							<div class="col-12">
								<label >
									Mark restaurant location
								</label>
							</div>
							<div id="googleMap" style="width:100%;height:400px;"></div>
							<div class="col-12">
								<input id="lat" class="form-control" name="lat">
								<input id="lng" class="form-control" name="lng">
							</div>
							<div class="col-12">
								<button type="submit" class="btn btn-primary">Add</button>
							</div>
						</form>
						</div>
						<div id="Paris" class="tabcontent">
							<form class="row g-3" method="post" action="/register/delivery">
								<div class="col-md-6">
									<label  class="form-label">Name</label>
									<input type="text" class="form-control"  name="name1">
								</div>
								<div class="col-md-6">
									<label class="form-label">Surame</label>
									<input type="text" class="form-control" name="surname1">
								</div>
								<div class="col-md-6">
									<label class="form-label">Email</label>
									<input type="email" class="form-control"  name="email1">
								</div>
								<div class="col-md-6">
									<label class="form-label">Password</label>
									<input type="password" class="form-control" name="pswrd1">
								</div>
								<div class="col-md-12">
									<label for="inputState" class="form-label">City</label>
									<select id="inputState" class="form-select" name="grad">
										<option selected>Choose...</option>
										<option value="Sarajevo">Sarajevo</option>
										<option value="Beograd">Beograd</option>
										<option value="Split">Split</option>
										<option value="Budva">Budva</option>
									</select>
								</div>
								<div class="col-12">
									<button type="submit" class="btn btn-primary">Add</button>
								</div>
							</form>
						</div>
					</div>
				</div>
		</a>
	</div>
</div>
<div id = "main" >
	<table>
		<tr>
			<td>
				<button class="dropdown-btn">Restaurants
					<i class="fa fa-caret-down"></i>
				</button>
				<div class="dropdown-container">
					<table class="table">
						<thead>
						<tr>
							<th scope="col">Name</th>
							<th scope="col">Type</th>
							<th scope="col">City</th>
							<th scope="col">Email</th>
							<th scope="col">Admin</th>
						</tr>
						</thead>
						<tbody>
						<%for(let i = 0; i<data.length; i++) {%>
						<tr>
							<td><%=data[i].naziv%></td>
							<td><%=data[i].kategorija%></td>
							<td><%=data[i].grad%></td>
							<td><%=data[i].email%></td>
							<td><%=data[i].ime_admina%></td>
							<td><button style='color: darkred'><i class='fas fa-trash-alt'></i>
								</button></td>
						</tr>
						<%}%>
						</tbody>
					</table>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<button class="dropdown-btn">Working cities
					<i class="fa fa-caret-down"></i>
				</button>
				<div class="dropdown-container">
					<table class="table">
						<thead>
						<tr>
							<th scope="col">#</th>
							<th scope="col">Name</th>
						</tr>
						</thead>
						<tbody>
						<%for(let i = 0; i<gr.length; i++) {%>
						<tr>
							<td><%=gr[i].id%></td>
							<td><%=gr[i].naziv%></td>
							<td><button style='color: darkred'><i class='fas fa-trash-alt'></i>
								</button></td>
						</tr>
						<%}%>
						</tbody>
					</table>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<button class="dropdown-btn">Food categories
					<i class="fa fa-caret-down"></i>
				</button>
				<div class="dropdown-container">
					<a href="#">Link 1</a>
					<a href="#">Link 2</a>
					<a href="#">Link 3</a>
				</div>
			</td>
		</tr>
		<tr>
			<td>
				<button class="drip">View data
				</button>
			</td>
		</tr>
	</table>
</div>

