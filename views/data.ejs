<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.1/css/all.css" integrity="sha384-vp86vTRFVJgpjF9jiIGPEEqYqlDwgyBgEF109VFjmqGmIY/Y4HV4d3Gp2irVfcrp" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <title>Data</title>
    <link rel="stylesheet" href="/stylesheets/data.css">
</head>
<body>
<div class="main">
    <div class="tab">
        <button id="defaultOpen" class="tablinks" onclick="openCity(event, 'London')">Delivery Employees</button>
        <button class="tablinks" onclick="openCity(event, 'Paris')">Users</button>
        <button class="tablinks" onclick="openCity(event, 'Tokyo')">Articles</button>
        <button class="tablinks" onclick="openCity(event, 'Sarajevo')">Orders</button>
    </div>

    <!-- Tab content -->
    <div id="London" class="tabcontent">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Suranme</th>
                <th scope="col">Email</th>
                <th scope="col">City</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            <%for(let i = 0; i<delivery.length; i++) {%>
                <%let delID = "d"+ delivery[i].id;%>
                <tr id="<%=delID%>">
                    <td><%=delivery[i].ime%></td>
                    <td><%=delivery[i].prezime%></td>
                    <td><%=delivery[i].email%></td>
                    <td><%=delivery[i].grad%></td>
                    <td><button style='color: red' onclick="deleteDel(<%=delivery[i].id%>)">
                            <i class='fas fa-trash-alt'></i>
                        </button></td>
                </tr>
            <%}%>
            </tbody>
        </table>
    </div>

    <div id="Paris" class="tabcontent">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Surname</th>
                <th scope="col">Email</th>
                <th scope="col">Address</th>
                <th scope="col">Floor</th>
                <th scope="col">City</th>
            </tr>
            </thead>
            <tbody>
            <%for(let i = 0; i<kor.length; i++) {%>
                <tr>
                    <td><%=kor[i].ime%></td>
                    <td><%=kor[i].prezime%></td>
                    <td><%=kor[i].email%></td>
                    <td><%=kor[i].adresa%></td>
                    <td><%=kor[i].sprat%></td>
                    <td><%=kor[i].grad%></td>
                </tr>
            <%}%>
            </tbody>
        </table>
    </div>

    <div id="Tokyo" class="tabcontent">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Handle</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
            </tr>
            <tr>
                <th scope="row">2</th>
                <td>Jacob</td>
                <td>Thornton</td>
                <td>@fat</td>
            </tr>
            <tr>
                <th scope="row">3</th>
                <td>Larry</td>
                <td>the Bird</td>
                <td>@twitter</td>
            </tr>
            </tbody>
        </table>
    </div>
    <div id="Sarajevo" class="tabcontent">
        <table class="table table-dark">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">First</th>
                <th scope="col">Last</th>
                <th scope="col">Last</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <th scope="row">1</th>
                <td>Mark</td>
                <td>Otto</td>
                <td>@mdo</td>
            </tr>

            </tbody>
        </table>
    </div>
</div>
<script src="/javascripts/data.js"></script>
</body>
</html>